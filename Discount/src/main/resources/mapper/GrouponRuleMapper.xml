<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xmu.oomall.mapper.GrouponRuleMapper">

    <select id="getGrouponRuleByGoodsId" resultType="com.xmu.oomall.domain.GrouponRule" parameterType="Integer">
        select * from groupon_rule where goods_id=#{id};
    </select>

    <insert id="insertGrouponRule" useGeneratedKeys="true" keyProperty="id">
        insert into groupon_rule(id,start_time,end_time,status,groupon_level_strategy,goods_id,gmt_create,gmt_modified,is_deleted)
            values(#{id},#{startTime},#{endTime},#{statusCode},#{grouponLevelStrategy},#{goodsId},#{gmtCreate},#{gmtModified},#{beDeleted});
    </insert>

    <select id="getGrouponRuleById" resultType="com.xmu.oomall.domain.GrouponRule" parameterType="Integer">
        select * from groupon_rule where id=#{id};
    </select>

    <update id="updateGrouponRule" parameterType="com.xmu.oomall.domain.GrouponRule">
        update groupon_rule
        <trim prefix="set" suffixOverrides=",">
            <if test="id!=null">id=#{id},</if>
            <if test="startTime!=null">start_time=#{startTime},</if>
            <if test="endTime!=null">end_time=#{endTime},</if>
            <if test="statusCode!=null">status=#{statusCode},</if>
            <if test="grouponLevelStrategy!=null">groupon_level_strategy=#{grouponLevelStrategy},</if>
            <if test="goodsId!=null">goods_id=#{goodsId},</if>
            <if test="gmtCreate!=null">gmt_create=#{gmtCreate},</if>
            <if test="gmtModified!=null">gmt_modified=#{gmtModified},</if>
            <if test="beDeleted!=null">is_deleted=#{beDeleted}</if>
        </trim>
        where id=#{id};
    </update>

    <delete id="deleteGrouponRule">
        delete from groupon_rule where id=#{id};
    </delete>

</mapper>