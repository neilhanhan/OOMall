<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xmu.oomall.mapper.BrandMapper">
    <select id="getBrandById" resultType="com.xmu.oomall.domain.Brand" parameterType="Integer">
        select * from brand where id =#{id} and is_deleted!=true;
    </select>

    <update id="updateBrandById"  parameterType="com.xmu.oomall.domain.Brand" >
        update brand
        <trim prefix="set" suffixOverrides=",">
            <if test="name!=null">name=#{name},</if>
            <if test="description!=null">description=#{description},</if>
            <if test="picUrl!=null">pic_url=#{picUrl},</if>
            <if test="gmtCreate!=null">gmt_create=#{gmtCreate},</if>
            <if test="gmtModified!=null">gmt_modified=#{gmtModified},</if>
            <if test="beDeleted!=null">is_deleted=#{beDeleted}</if>
        </trim>
        where id=#{id} and is_deleted!=true;
    </update>

    <insert id="addBrand" parameterType="com.xmu.oomall.domain.Brand" useGeneratedKeys="true" keyProperty="id">
        insert into brand(name,description,pic_url,gmt_create,gmt_modified,is_deleted) values(#{name},#{description},#{picUrl},#{gmtCreate},#{gmtModified},#{beDeleted});
    </insert>

    <delete id="deleteBrandById" parameterType="Integer">
        update brand set is_deleted=true where id =#{id} and is_deleted!=true;
    </delete>

    <select id="listBrandByCodition" resultType="com.xmu.oomall.domain.Brand" parameterType="String">
        select * from brand where is_deleted!=true;
    </select>

    <select id="listBrand" resultType="com.xmu.oomall.domain.Brand">
        select * from brand where is_deleted!=true;
    </select>
</mapper>