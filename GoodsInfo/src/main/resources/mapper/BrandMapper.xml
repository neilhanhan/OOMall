<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xmu.oomall.mapper.BrandMapper">
    <select id="getBrandById" resultType="com.xmu.oomall.domain.Brand" parameterType="int">
        select * from brand where id =# {id};
    </select>

    <insert id="createBrand" parameterType="com.xmu.oomall.domain.Brand">
        <selectKey keyColumn="id" keyProperty="id" resultType="int">
            select last_insert_id();
        </selectKey>
        insert into brand(name,description,pic_url,gmt_create,gmt_modified,is_deleted)
                values(#(brandname),#(description),#(pic_url),#(gmt_create),#(gmt_modified),#(is_deleted));
    </insert>

    <update id="updataBrandById"  parameterType="com.xmu.oomall.domain.Brand">
        update brand
    </update>
</mapper>