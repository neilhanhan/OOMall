<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xmu.oomall.mapper.GoodsCategoryMapper">
    <select id="listGoodsCategory" resultType="com.xmu.oomall.domain.GoodsCategory">
        select * from goods_category where is_deleted!=true;
    </select>

    <insert id="addGoodsCategory" parameterType="com.xmu.oomall.domain.GoodsCategory" useGeneratedKeys="true" keyProperty="id">
        insert into goods_category(name,pid,pic_url,gmt_create,gmt_modified,is_deleted)
        values (#{name},#{pid},#{picUrl},#{gmtCreate},#{gmtModified},#{beDeleted});
    </insert>
    
    <select id="getGoodsCategoryById" parameterType="Integer" resultType="com.xmu.oomall.domain.GoodsCategory">
        select * from goods_category where id=#{id} and is_deleted!=true;
    </select>

    <update id="updateGoodsCategoryById" parameterType="com.xmu.oomall.domain.GoodsCategory">
        update goods_category
        <trim prefix="set" suffixOverrides=",">
            <if test="name!=null">name=#{name},</if>
            <if test="pid!=null">pid=#{pid},</if>
            <if test="picUrl!=null">pic_url=#{picUrl}</if>
            <if test="gmtCreate!=null">gmt_create=#{gmtCreate},</if>
            <if test="gmtModified!=null">gmt_modified=#{gmtModified},</if>
            <if test="beDeleted!=null">is_deleted=#{beDeleted}</if>
        </trim>
        where id=#{id} and is_deleted!=true;
    </update>

    <delete id="deleteGoodsCategory" parameterType="Integer">
        update goods_category set is_deleted=true where id =#{id};
    </delete>

    <select id="listOneLevelGoodsCategory" resultType="com.xmu.oomall.domain.GoodsCategory">
        select * from goods_category where pid=1 and is_deleted!=true;
    </select>
    
    <select id="listSecondLevelGoodsCategoryById" resultType="com.xmu.oomall.domain.GoodsCategory" parameterType="Integer">
        select * from goods_category where pid=#{id} and is_deleted!=true;
    </select>
</mapper>
